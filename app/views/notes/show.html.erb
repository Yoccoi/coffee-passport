<div class="show-wrapper">
  <div class="show-content-note">
    <div class="show-title">
      <h1>記録詳細</h1>
    </div>
    <div class="show-img">
      <%= image_tag @note.image.variant(resize: '350x350') %>
    </div>
    <table>
      <tr>
        <th>銘柄</th>
        <th>総合評価</th>
        <th>コメント</th>
        <th>焙煎日</th>
        <th>グラム数</th>
        <th>価格</th>
      </tr>
      <tr>
        <td><%= @note.name %></td>
        <td><%= @note.rating %></td>
        <td><%= @note.comment %></td>
        <td><%= @note.roast_date %></td>
        <td><%= @note.grams %></td>
        <td><%= @note.price %></td>
      </tr>
    </table>
    <div>
      <%= @note.bitter %>
      <%= @note.acidity %>
      <%= @note.aroma %>
      <%= @note.body %>
      <canvas id="myChart" width="400" height="400"></canvas>
      <script>
        var ctx = document.getElementById('myChart');
        var myChart = new Chart(ctx, {
          type: 'polarArea',
          data: {
            labels: ['苦味', '酸味', '香り', 'ボディ'],
            datasets: [{
              data: [gon.note.bitter, gon.note.acidity, gon.note.aroma, gon.note.body],
              backgroundColor: [
                  'rgba(255, 99, 132, 0.2)',
                  'rgba(54, 162, 235, 0.2)',
                  'rgba(255, 206, 86, 0.2)',
                  'rgba(75, 192, 192, 0.2)',
                  ],
              borderColor: [
                  'rgba(255, 99, 132, 1)',
                  'rgba(54, 162, 235, 1)',
                  'rgba(255, 206, 86, 1)',
                  'rgba(75, 192, 192, 1)',
                  ],
              }]
            }
          });
      </script>
    </div>
  </div>

  <div class="show-content-shop">
    
    <div id="gmap" class="show-gmap"></div>

  </div>

</div>
<div class="btn back-btn">
  <%= link_to "戻る", root_path %>
</div>